rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isOwner(uid) { return isSignedIn() && request.auth.uid == uid; }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isOwner(uid);
      allow update, delete: if isOwner(uid);
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    match /guilds/{guildId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false; // keep strict; admins can be added later via Cloud Functions
    }

    match /guilds/{guildId}/members/{uid} {
      allow read: if isSignedIn();
      allow create: if isOwner(uid);
      allow delete, update: if isOwner(uid);
    }

    match /guilds/{guildId}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }
  }
}
